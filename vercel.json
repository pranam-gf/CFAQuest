{
  "version": 2,
  "outputDirectory": "client/dist",
  "buildCommand": "npm install && npm run build --workspace=client",
  "installCommand": "npm install",
  "nodeVersion": "18.x",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
