{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "outputDirectory": "client/dist",
  "buildCommand": "npm --prefix client run build",

  "functions": {
    "api/**/*.ts": {
      "includeFiles": "attached_assets/**"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
