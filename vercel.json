{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ],
  "builds": [
    {
      "src": "client",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "dist" }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ]
}